#!/usr/bin/env bash
# Configures a new Ubuntu machine by installing Nginx
# Nginx should be explicitly set to listen on port 80 and serve a "Hello World!" page

echo "Updating and installing Nginx..."
sudo apt-get update -y -qq && \
sudo apt-get install nginx -y

# Backup the default Nginx configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Configure Nginx to listen on port 80 explicitly
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

echo "Allowing Nginx on firewall..."
sudo ufw allow 'Nginx HTTP'

echo "Setting ownership and permissions..."
sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www/html

echo "Creating 'Hello World!' page..."
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

echo "Reloading Nginx configuration..."
sudo nginx -s reload

echo "Nginx setup complete."

